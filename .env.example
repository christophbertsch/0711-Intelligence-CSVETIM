# CSV Import Guardian Agent System Configuration

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
SECRET_KEY=dev-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://guardian:guardian_pass@localhost:5432/csv_guardian

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_CONSUMER_GROUP_PREFIX=csv-guardian

# Object Storage (S3-compatible)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=csv-guardian
S3_REGION=us-east-1
S3_USE_SSL=false

# Redis
REDIS_URL=redis://localhost:6379

# Monitoring & Tracing
JAEGER_ENDPOINT=http://localhost:14268/api/traces
ENABLE_TRACING=true

# Processing Configuration
MAX_FILE_SIZE_MB=500
MAX_ROWS_PER_FILE=1000000
SAMPLE_SIZE=1000
QUALITY_GATE_THRESHOLD=0.8

# Agent Configuration
AGENT_BATCH_SIZE=100
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=300
AGENT_CONCURRENCY=1

# Export Configuration
EXPORT_TIMEOUT_MINUTES=60
EXPORT_BATCH_SIZE=10000

# Cache Configuration
CACHE_TTL_SECONDS=3600

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# CORS
ALLOWED_ORIGINS=*

# Agent-specific topic configuration (optional)
# INGEST_INPUT_TOPICS=file.received
# INGEST_OUTPUT_TOPICS=file.profiled
# PROFILING_INPUT_TOPICS=file.received
# PROFILING_OUTPUT_TOPICS=file.profiled
# MAPPING_INPUT_TOPICS=file.profiled
# MAPPING_OUTPUT_TOPICS=mapping.applied
# VALIDATION_INPUT_TOPICS=mapping.applied
# VALIDATION_OUTPUT_TOPICS=validation.results